{
  "name": "compile_scss_typescript",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "start:server": "browser-sync start -s -w /*.html /css/*.css /js/*.js",
    "compile:css2cssprefix": "postcss css/style.css -u autoprefixer -o css/style.css",
    "compile:scss2css": "node-sass scss/style.scss --importer node_modules/node-sass-globbing/index.js css/style.css --output-style expanded --source-map css/",
    "compile:scss2cssprefix": "run-s compile:scss2css compile:css2cssprefix",
    "watch:scss2cssprefix": "chokidar \"scss/\" --command \"npm run compile:scss2cssprefix\" --initial",
    "watch:ts": "tsc ts/main.ts --outFile js/main.js -w",
    "watch:js": "cpx \"js/*.js\" js/ -w",
    "watch:all": "run-p watch:scss2cssprefix watch:ts start:server",
    "lint:scss": "stylelint \"**/*.scss\"",
    "format:scss": "stylelint --fix \"**/*.scss\"",
    "lint:ts": "eslint ts/main.ts",
    "lint:js": "eslint js/main.js",
    "format:ts": "eslint ts/main.ts --fix",
    "format:js": "eslint js/main.js --fix",
    "format:all": "run-p format:scss format:ts",
    "min:css": "cleancss -o css/style.css css/style.css",
    "min:js": "uglifyjs js/main.js js/main.js -o js/main.js",
    "delete:map": "rimraf **/*.map",
    "prepare:all": "run-p min:js min:css delete:map"
  },
  "keywords": [],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^4.11.0",
    "autoprefixer": "^10.1.0",
    "browser-sync": "^2.26.13",
    "chokidar-cli": "^2.1.0",
    "clean-css-cli": "^4.3.0",
    "cpx": "^1.5.0",
    "eslint": "^7.16.0",
    "eslint-config-prettier": "^7.1.0",
    "eslint-plugin-prettier": "^3.3.0",
    "mkdirp": "^1.0.4",
    "node-sass": "^5.0.0",
    "node-sass-globbing": "0.0.23",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.2.1",
    "postcss-cli": "^8.3.1",
    "prettier": "^2.2.1",
    "stylelint-order": "^4.1.0",
    "stylelint-prettier": "^1.1.2",
    "stylelint-scss": "^3.18.0",
    "stylint": "^2.0.0",
    "uglify-es": "^3.3.9"
  },
  "dependencies": {
    "@typescript-eslint/parser": "^4.11.0",
    "rimraf": "^3.0.2",
    "stylelint": "^13.8.0",
    "stylelint-config-prettier": "^8.0.2",
    "stylelint-config-recommended-scss": "^4.2.0",
    "typescript": "^4.1.3"
  }
}
